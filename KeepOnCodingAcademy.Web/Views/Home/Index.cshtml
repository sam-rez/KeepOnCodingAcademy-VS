@using KeepOnCodingAcademy.DataAccess.Models

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Questions List</h1>

    <ul>
        @foreach (var question in ViewBag.QuestionList)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-route-id="@question.Id" asp-action="Question">Question @question.Id: @question.Title</a>
            </li>
        }
    </ul>
    <h3>Success? @ViewBag.Success</h3>

    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
